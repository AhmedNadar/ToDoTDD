<!DOCTYPE html>
<html>
<head>
  <title>Todos</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="container">
  <nav class="navbar navbar-default">
    <div class="navbar-header">
      <%= link_to 'todo The TDD Way', root_path, class: 'navbar-brand' %>
    </div>
    <div class="pull-right right-buttons">
    	<p class="welcome">Welcome, <%= link_to current_user.email, todos_path %></p>
      <%# if user_signed_in? %>
        <%#= link_to 'Sign out', destroy_user_session_path, method: 'delete', class: 'btn btn-default navbar-btn' %>
      <%# end %>
    </div>
  </nav>
</header>

<div class="container">
	<div class="row">
		<%= yield %>
	</div>
</div>
</body>
</html>
