<div>
	<ul>
		<% @todos.each do |todo| %>
			<li class="todo<%= ' completed' if todo.completed_at? %>" >
				<span><%= todo.description %></span> - 
				<span><%= link_to 'Complete', todo_completion_path(todo), method: :post %></span>
			</li>
		<% end	%>
	</ul>
</div>
<%= link_to "Add a new todo", new_todo_path  %>
